{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name":  "File",
        "Args": {
          "path": "logs/ConfigLog-.json",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "ProductAPI": "http://localhost:5026",
    "PromoAPI": "http://localhost:5033",
    "AuthAPI": "http://localhost:5216"
  }
}
